<com.v.quarter.CustomViews.SlidingMenu
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_menu"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_marginTop="20dp"
    android:scrollbars="none"
    zhy:rightPadding="100dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        <include layout="@layout/layout_menu" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
             >
            <com.v.quarter.CustomViews.TitleView
                android:background="#03A9F4"
                android:id="@+id/titleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.hjm.bottomtabbar.BottomTabBar
                xmlns:hjm="http://schemas.android.com/apk/res-auto"
                android:id="@+id/bottom_tab_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                hjm:tab_font_size="12sp"
                hjm:tab_img_font_padding="0dp"
                hjm:tab_img_height="40dp"
                hjm:tab_img_width="40dp"
                hjm:tab_padding_bottom="5dp"
                hjm:tab_padding_top="8dp"
                hjm:tab_selected_color="#03A9F4"
                hjm:tab_unselected_color="#5000"
                />
        </LinearLayout>

    </LinearLayout>

</com.v.quarter.CustomViews.SlidingMenu>