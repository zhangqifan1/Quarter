<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/b4"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/realtabcontentLog"
        android:visibility="gone"
        android:background="#E0808080"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/progressLog"
            android:layout_centerInParent="true"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:src="@drawable/progress"
            />
    </RelativeLayout>
    <Button
        android:background="@drawable/buttonnostroke"
        android:textColor="@color/colorHui"
        android:onClick="ToReg"
        android:text="注册账号"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:onClick="Login2Back"
        android:src="@drawable/j1"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="14dp"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <ImageView
        android:src="@drawable/b2"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <LinearLayout
        android:id="@+id/llbox"
        android:orientation="vertical"
        android:background="@drawable/logstroke"
        android:layout_marginTop="184dp"
        android:layout_centerHorizontal="true"
        android:layout_width="260dp"
        android:layout_height="96dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="45dp">
            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="12dp"
                android:textColor="#89A0B5"
                android:text="@string/UserName"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="请输入手机号"
                android:id="@+id/etName2"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="@color/colorHui"
            android:layout_width="236dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="45dp">
            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/User"
                android:text="@string/UserPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="请输入密码"
                android:id="@+id/etPwd2"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:onClick="Login"
        android:id="@+id/butLog"
        android:text="登录"
        android:background="@drawable/buttonnostroke2"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/llbox"
        android:layout_below="@id/llbox"
        android:layout_width="260dp"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="forgetPwd"
        android:textColor="@color/colorHui"
        android:text="忘记密码"
        android:textSize="20sp"
        android:background="@drawable/buttonnostroke"
        android:layout_alignRight="@id/butLog"
        android:layout_below="@id/butLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="@drawable/buttonnostroke"
        android:onClick="InTourist2"
        android:textColor="#fff"
        android:layout_marginBottom="130dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="游客登录"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="45dp" />

</RelativeLayout>