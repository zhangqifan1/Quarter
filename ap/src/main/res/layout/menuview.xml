<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp">

        <TextView
            android:visibility="gone"
            android:id="@+id/tvJubaoJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="举报"
            android:textSize="10sp"
            android:textStyle="bold"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvCopyLineJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="复制链接"
            android:textSize="10sp"
            android:textStyle="bold"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvPingbiJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="屏蔽"
            android:textSize="10sp"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="9dp">

        <ImageView
            android:id="@+id/imageJubaoJ"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/jubao" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="9dp">

        <ImageView
            android:id="@+id/imageCopyLineJ"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/copyline" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="9dp">

        <ImageView
            android:id="@+id/imagePingbiJ"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/pingbi" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/drawablecolor">

        <ImageView
            android:id="@+id/imageOpenMenuJ"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/openmenu" />

    </RelativeLayout>


</RelativeLayout>